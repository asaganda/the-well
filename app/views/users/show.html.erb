<h1>currently logged in: </h1>
<%= @user %>

<ul>
	<% if current_user %>
		<li>
			<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
		</li>
	<% else %>
		<li>
			<%= link_to('Login', new_user_session_path)  %>
		</li>
	<% end %>
</ul>

<div class="main-container">
  <div id="border-wrap">
    <div id="new-order">
      <h1>MENU:</h1>
    </div><!-- new-order title div -->
      <div id="list-items">
        <h2>List of items...</h2>
        <div id="table-menu">
          <table>
            <thead>
              <tr>
                <th>Item</th>
                <th>Price</th>
              </tr>
            </thead><!-- table headers -->
            <tbody>
              <% @item.each do |i| %> 
                <tr>   
                  <td><%= i.name %></td>
                  <td><%= number_to_currency(i.price) %></td>
                </tr><!-- table rows -->
              <% end %>
            </tbody><!-- table body -->
          </table><!-- table for the menu items -->
        </div><!-- div containing the table -->
      </div><!-- list-items placeholder div -->
  </div><!-- border-wrap div around new order -->
  <div id="border-wrap">
    <div id="cart">
      <h1>CART:</h1>
    </div><!-- card title div -->
      <div id="order-list">
        <h2>List of orders...</h2>
          Order#/Waiter-Bartender,
          Total Cost (of all orders): $$$ 
      </div><!-- order-list placeholder div -->
  </div><!-- border-wrap div around cart -->
</div><!-- main-container div -->
